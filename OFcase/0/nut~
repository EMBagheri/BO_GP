FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "nut_IC"

dimensions      [0 2 -1 0 0 0 0];

internalField   $nut_internalField;

boundaryField
{
    inlet_low
    {
        type            calculated;
        value           $nut_inflow_low;
    }
    inlet_up
    {
        type            calculated;
        value           $nut_inflow_up;
    }
    
    outlet_low
    {
        type            zeroGradient;
        value           $internalField;
    }
    outlet_up
    {
        type            zeroGradient;
        value           $internalField;
    }
    
    topWall
    {
      type            zeroGradient;//symmetryPlane;
      value           $internalField;//uniform 0;
    }
    
    bottomWall
    {
        type            nutLowReWallFunction; //equiv. to fixedValue, uniform0
        value           uniform 0;
    }
    
    front_low
    {
        type            empty;
    }
    back_low
    {
        type            empty;
    }
    front_up
    {
        type            empty;
    }
    back_up
    {
        type            empty;
    }
}


