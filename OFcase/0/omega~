FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "omega_IC"

dimensions      [0 0 -1 0 0 0 0];

internalField   $omega_internalField;

boundaryField
{
    inlet_low
    {
        type            fixedValue;
        value           $omega_inflow_low;
    }
    inlet_up
    {
        type            fixedValue;
        value           $omega_inflow_up;
    }
    
    outlet_low
    {
      type            zeroGradient;
    }
    outlet_up
    {
        type            zeroGradient;
    }
    
    topWall
    {
      type            zeroGradient;//symmetryPlane;
        value           uniform 1.e13; // set large value?
    }
    bottomWall
    {
        type            omegaWallFunction;
        value           uniform 1.e13;
    }
    
    front_low
    {
        type            empty;
    }
    back_low
    {
        type            empty;
    }
    front_up
    {
        type            empty;
    }
    back_up
    {
        type            empty;
    }
}


