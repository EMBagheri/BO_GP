FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)      bounded Gauss linearUpwind grad(U);//LUST, linear
    div(phi,k)      bounded Gauss limitedLinear 1;
    div(phi,epsilon) bounded Gauss limitedLinear 1;
    div(phi,omega)  bounded Gauss limitedLinear 1;
    //   div(phi,v2)     bounded Gauss limitedLinear 1;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;// common
    div(nonlinearStress) Gauss linear;
}

laplacianSchemes
{
 default         Gauss linear corrected;// last term from snGradSchemes
}

interpolationSchemes
{
 default         linear;// common
}

snGradSchemes
{
 default         corrected;// change if the nonorthogonality is huge
}

wallDist
{
  method meshWave;// good for orthogonal mesh
  //correctWalls    true;
}


// ************************************************************************* //
